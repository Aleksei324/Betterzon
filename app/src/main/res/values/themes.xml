<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Betterzon" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color (color del boton) -->
        <item name="colorPrimary">@color/teal_200</item>
        <!-- color de status bar -->
        <item name="colorPrimaryVariant">@color/white_300</item>
        <!-- color del texto de los botones -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. (color de la linea de borde de textbox) -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="bottom_navigation">
        <!-- fondo -->
        <item name="android:background">@color/white_300</item>
        <!-- color de los iconos -->
        <item name="itemIconTint">@color/teal_200</item>
        <!-- color del texto -->
        <item name="itemTextColor">@color/teal_200</item>
    </style>

    <style name="card_view">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>